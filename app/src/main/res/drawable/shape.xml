    <!--圆形按钮按钮-->
    <!-- 定义填充渐变颜色 -->
    <gradient
        android:angle="45"
        android:endColor="#371"
        android:startColor="#381"
        android:type="sweep"/>
    <!-- 设置内填充 -->
    <padding
        android:bottom="7dp"
        android:left="7dp"
        android:right="7dp"
        android:top="7dp"/>
    <!-- 设置圆角矩形 -->
    <corners android:radius="8dp"/>
</shape>